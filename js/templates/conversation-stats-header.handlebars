    {{participantCount}}
  {{/ifDefined}}
  {{#ifDefined commentCount}}
    <i class="fa fa-align-left"></i>
    Comments:
    {{commentCount}}
  {{/ifDefined}}
  {{#ifDefined voteCount}}
    &#x25c6; {{! unicode diamond shape }}
    Votes:
    {{voteCount}}
  {{/ifDefined}}
</div>
