<div id="conversationTabs" class="
  custom_gutter_via_padding
  {{#if use_background_content_class}}background_content{{/if}}
  "
  style="display:none"
  >

 <table>
  <tr>
  <td style="width:100%">
  <ul class="nav nav-tabs tab-conv"
    style="border-bottom: 0px">
    <li
      id="voteTab"
      {{#if voteActive}} class="active" {{/if}}
    >
      <a
        href="#commentView"
        id="commentViewTab"
        class="HeadingC polis-tab"
        style="padding: 10px 5px !important; border: none;  text-transform: none;"
        data-toggle="tab">
        {{!-- {{#ifNotIE8}}<i style="font-size: 16px" class="fa fa-align-justify"></i>{{/ifNotIE8}}{{#if showTabs}}READ &amp; REACT{{/if}} --}}
        {{#ifNotIE8}}<i style="font-size: 16px" class="fa fa-comments"></i>{{/ifNotIE8}}
        React
      </a>
    </li>
    <li
      class="{{#if writeActive}}active{{/if}}"
    >
      <a
        href="#commentForm"
        id="commentFormTab"
        class="HeadingC polis-tab"
        style="padding: 10px 5px !important; border: none; text-transform: none;"
        data-toggle="tab">
        {{!-- {{#ifNotIE8}}<i style="font-size: 16px" class="fa fa-pencil"></i>{{/ifNotIE8}}{{#if showTabs}} WRITE{{/if}} --}}
        {{#ifNotIE8}}<i style="font-size: 16px" class="fa fa-pencil"></i>{{/ifNotIE8}}
        Write
      </a>
    </li>
    {{#if allowMajority}}
    <li
      class="{{#if majorityActive}}active{{/if}}"
    >
      <a
        href="#majority"
        id="majorityTab"
        class="HeadingC polis-tab"
        style="
          padding: 10px 5px !important;
          border: none;
          text-transform: none;
          {{#unless showMajorityTab}}display: none;{{/unless}}
          "
        data-toggle="tab">
        {{!-- See Consensus --}}
        {{#ifNotIE8}}<i style="font-size: 16px" class="fa fa-globe"></i>{{/ifNotIE8}}
        Majority
        {{!-- {{#ifNotIE8}}<i style="font-size: 16px" class="fa fa-coffee"></i>{{/ifNotIE8}}{{#if showTabs}} ANALYZE{{/if}} --}}
      </a>
    </li>
    {{/if}}
    <li
      class="{{#if groupActive}}active{{/if}}"
    >
      <a
        href="#group"
        id="groupTab"
        class="polis-tab"
        style="display:none;"
        data-toggle="tab">
      {{! Group (nothing to show) }}
      </a>
    </li>
    <li
      class="{{#if legendActive}}active{{/if}}"
    >
      <a
        href="#legend"
        id="legendTab"
        class="polis-tab"
        style="display:none;"
        data-toggle="tab">
        legend
      {{! nothing to show }}
      </a>
    </li>
    <li
      class="{{#if infoPaneActive}}active{{/if}}"
    >
      <a
        href="#infoSlidePane"
        id="infoPaneTab"
        class="polis-tab"
        style="display:none;"
        data-toggle="tab">
        infoPane
      {{! nothing to show }}
      </a>
    </li>
  </ul>
  </td>
  <td>


